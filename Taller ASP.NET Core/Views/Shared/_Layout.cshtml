<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Task Manager</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar Mejorada -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm fixed-top">
        <div class="container">
            <!-- Logo y marca -->
            <a class="navbar-brand d-flex align-items-center fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="logo-wrapper bg-primary bg-gradient rounded-circle p-2 me-2">
                    <i class="bi bi-check2-circle text-white"></i>
                </div>
                <span class="text-gradient-primary">My Task Manager</span>
            </a>

            <!-- Botón de tema claro/oscuro -->
            <button class="btn btn-outline-secondary btn-sm me-2" id="themeToggle">
                <i class="bi bi-moon-stars"></i>
            </button>

            <!-- Botón del menú móvil -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Contenido del navbar -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Navegación principal -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active fw-bold" : "")"
                           asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tasks" ? "active fw-bold" : "")"
                           asp-controller="Tasks" asp-action="Index">
                            <i class="bi bi-list-task me-1"></i>
                            <span>Mis Tareas</span>
                        </a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="Tasks" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>
                            <span>Nueva Tarea</span>
                        </a>
                    </li>
                    }
                </ul>

                <!-- Menú de usuario -->
                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- Espacio para el navbar fijo -->
    <div style="height: 72px;"></div>

    <!-- Contenido principal -->
    <main role="main" class="pb-4">
        @RenderBody()
    </main>

    <!-- Footer Mejorado -->
    <footer class="footer mt-auto py-4 bg-light border-top">
        <div class="container">
            <div class="row align-items-center">
                <!-- Información -->
                <div class="col-lg-4 text-center text-lg-start mb-3 mb-lg-0">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none d-inline-flex align-items-center">
                        <div class="logo-wrapper bg-primary bg-gradient rounded-circle p-2 me-2">
                            <i class="bi bi-check2-circle text-white"></i>
                        </div>
                        <span class="fw-bold text-dark">My Task Manager</span>
                    </a>
                    <p class="text-muted small mt-2 mb-0">
                        Organiza tu vida, aumenta tu productividad
                    </p>
                </div>

                <!-- Enlaces rápidos -->
                <div class="col-lg-4 text-center mb-3 mb-lg-0">
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                            <i class="bi bi-house"></i> Inicio
                        </a>
                        <a asp-controller="Tasks" asp-action="Index" class="text-decoration-none text-muted">
                            <i class="bi bi-list-task"></i> Tareas
                        </a>
                        @if (User.Identity?.IsAuthenticated != true)
                        {
                        <a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none text-muted">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        }
                    </div>
                </div>

                <!-- Copyright -->
                <div class="col-lg-4 text-center text-lg-end">
                    <p class="text-muted small mb-0">
                        &copy; @DateTime.Now.Year - My Task Manager<br>
                        <small>Desarrollado con <i class="bi bi-heart-fill text-danger"></i> y ASP.NET Core</small>
                    </p>
                </div>
            </div>

            <!-- Separador -->
            <hr class="my-3 opacity-25">

            <!-- Tecnologías utilizadas -->
            <div class="text-center">
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                        <i class="bi bi-filetype-cs me-1"></i> C#
                    </span>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                        <i class="bi bi-window me-1"></i> ASP.NET Core
                    </span>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                        <i class="bi bi-bootstrap me-1"></i> Bootstrap 5
                    </span>
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                        <i class="bi bi-database me-1"></i> SQLite
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Scripts para el tema claro/oscuro -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Toggle de tema claro/oscuro
            const themeToggle = document.getElementById('themeToggle');
            const themeIcon = themeToggle.querySelector('i');
            const htmlElement = document.documentElement;

            // Verificar preferencia guardada o del sistema
            const savedTheme = localStorage.getItem('theme') || 'light';
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

            // Aplicar tema inicial
            if (savedTheme === 'dark' || (savedTheme === 'system' && prefersDark)) {
                htmlElement.setAttribute('data-bs-theme', 'dark');
                themeIcon.className = 'bi bi-sun';
            } else {
                htmlElement.setAttribute('data-bs-theme', 'light');
                themeIcon.className = 'bi bi-moon-stars';
            }

            // Manejar click en toggle
            themeToggle.addEventListener('click', function () {
                const currentTheme = htmlElement.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';

                htmlElement.setAttribute('data-bs-theme', newTheme);
                themeIcon.className = newTheme === 'dark' ? 'bi bi-sun' : 'bi bi-moon-stars';
                localStorage.setItem('theme', newTheme);
            });

            // Efecto activo en navbar
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function () {
                    navLinks.forEach(l => l.classList.remove('active', 'fw-bold'));
                    this.classList.add('active', 'fw-bold');
                });
            });

            // Smooth scroll para anclas
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Variables CSS */
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        --shadow-md: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        --transition: all 0.3s ease;
    }

    /* Estilos generales */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        padding-top: 0;
        background-color: var(--bs-body-bg);
        transition: var(--transition);
    }

    /* Logo y marca */
    .logo-wrapper {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
    }

    .navbar-brand:hover .logo-wrapper {
        transform: rotate(15deg) scale(1.1);
    }

    .text-gradient-primary {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Navbar */
    .navbar {
        padding: 0.75rem 0;
        transition: var(--transition);
    }

    .nav-link {
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        transition: var(--transition);
        position: relative;
    }

        .nav-link:hover {
            background-color: var(--bs-primary-bg-subtle);
            transform: translateY(-2px);
        }

        .nav-link.active {
            background-color: var(--bs-primary);
            color: white !important;
        }

            .nav-link.active:hover {
                background-color: var(--bs-primary);
                transform: none;
            }

    /* Footer */
    .footer {
        transition: var(--transition);
    }

    /* Botón de tema */
    #themeToggle {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .navbar-collapse {
            background: var(--bs-body-bg);
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: var(--shadow-md);
            margin-top: 0.5rem;
        }

        .nav-link {
            margin: 0.25rem 0;
        }

        #themeToggle {
            position: absolute;
            right: 60px;
            top: 16px;
        }
    }

    /* Modo oscuro */
    [data-bs-theme="dark"] {
        --bs-body-bg: #121212;
        --bs-body-color: #ffffff;
    }

        [data-bs-theme="dark"] .navbar,
        [data-bs-theme="dark"] .footer {
            background-color: #1e1e1e !important;
            border-color: #333 !important;
        }

        [data-bs-theme="dark"] .nav-link:hover {
            background-color: rgba(var(--bs-primary-rgb), 0.2);
        }

        [data-bs-theme="dark"] .text-muted {
            color: #aaa !important;
        }
</style>